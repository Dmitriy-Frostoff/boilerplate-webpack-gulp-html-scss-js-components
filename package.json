{
  "name": "boilerplate-webpack-gulp-html-scss-js-components",
  "version": "1.0.0",
  "description": "It's a boilerplate for usage of Webpack, Gulp, SCSS, HTML, JS in a future project. Check out the docs below to be in actual tune!",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "html+dev": "gulp --gulpfile ./configs/gulp/gulpfile.js html && webpack --config ./configs/webpack/webpack.config.js --progress",
    "html": "gulp --gulpfile ./configs/gulp/gulpfile.js html --progress",
    "start": "webpack-dev-server --config ./configs/webpack/webpack.config.js --progress",
    "dev": "webpack --config ./configs/webpack/webpack.config.js --node-env=development --progress",
    "build": "webpack --config ./configs/webpack/webpack.config.js --node-env=production --progress",
    "update:packages": "node ./configs/execa/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dmitriy-Frostoff/boilerplate-webpack-gulp-html-scss-js-components.git"
  },
  "keywords": [
    "webpack",
    "gulp",
    "html",
    "scss",
    "css-modules",
    "js",
    "components",
    "execa"
  ],
  "author": "Dmitriy Frostoff",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Dmitriy-Frostoff/boilerplate-webpack-gulp-html-scss-js-components/issues"
  },
  "homepage": "https://github.com/Dmitriy-Frostoff/boilerplate-webpack-gulp-html-scss-js-components#readme",
  "devDependencies": {
    "css-loader": "^7.1.2",
    "execa": "^9.5.1",
    "gulp": "^5.0.0",
    "gulp-cli": "^3.0.0",
    "gulp-file-include": "^2.3.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.4",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.3",
    "image-minimizer-webpack-plugin": "^4.1.1",
    "imagemin": "^9.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^8.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^11.0.1",
    "mini-css-extract-plugin": "^2.9.2",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.82.0",
    "sass-loader": "^16.0.4",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  }
}
